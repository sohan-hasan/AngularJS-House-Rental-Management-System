@model IEnumerable<ApartmentViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Custom/js/module.js"></script>
<script src="~/Custom/js/service.js"></script>
<script src="~/Custom/js/controller.js"></script>
<div ng-app="apartmentModule" ng-controller="apartmentController">
    <div class="pl-0">
        <div><span class="page_header">Apartment</span></div>
        <div style="padding-left:0">
            <button type="button" class="btn_add_new" data-bs-toggle="modal" data-bs-target="#CreateModal" ng-click="FillDropDownValue()">Create New</button>
        </div>
    </div>
    <table class="table table-bordered table-striped list_table">
        <thead>
            <tr>
                <th class="text-center">
                    ###
                </th>
                <th>
                    Apartment Type
                </th>
                <th>
                    Building Name
                </th>
                <th>
                    Apartment Name
                </th>
                <th class="text-center">
                    No.Of Bathroom
                </th>
                <th class="text-center">
                    No. Of BedRoom
                </th>
                <th class="text-center">
                    No. Of Room
                </th>
                <th class="text-right">
                    Monthly Rent
                </th>
                <th class="text-right">
                    Security Amount
                </th>
                <th class="tbl_large_field">
                    Apartment Details
                </th>
                <th class="text-center">
                    Building Image
                </th>
                <th class="text-center tbl_action">Actions</th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="item in apartments">
                <td class="text-center">
                    {{$index+1}}
                </td>
                <td>
                    {{item.AptTypeDescription}}
                </td>
                <td>
                    {{item.BuildingShortName}}
                </td>
                <td>
                    {{item.ApartmentName}}
                </td>
                <td class="text-center">
                    {{item.BathroomCount}}
                </td>
                <td class="text-center">
                    {{item.BedroomCount}}
                </td>
                <td class="text-center">
                    {{item.RoomCount}}
                </td>
                <td class="text-right">
                    {{item.MonthlyRent}}
                </td>
                <td class="text-right">
                    {{item.SecurityDepositAmount}}
                </td>
                <td class="tbl_large_field">
                    {{item.OtherApartmentDetails}}
                </td>
                <td class="text-center">
                    <a class="btn_view_images" ng-click='ApartmentImages(item.AptId)' data-bs-toggle="modal" data-bs-target="#ViewImagesModal">View&nbsp;Images</a>
                </td>
                <td class="text-center">
                    <div class="btn-group">
                        <div class="dropdown">
                            <a class="btn_table dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
                                Action
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                <li><a class="dropdown-item" ng-click='SelectedApartment(item)' data-bs-toggle="modal" data-bs-target="#EditModal">Edit</a></li>
                                <li><a class="dropdown-item" ng-click='DeleteApartment(item.AptId)' onclick="return confirm('Are you sure to delete?')">Delete</a></li>
                                <li><a class="dropdown-item" ng-click='SelectedApartment(item)' data-bs-toggle="modal" data-bs-target="#DetailsModal">Details</a></li>
                            </ul>
                        </div>
                    </div>
                </td>
            </tr>
        </tbody>
    </table>
    <div class="modal fade" id="CreateModal" tabindex="-1" aria-labelledby="CreateModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header px-md-5">
                    <h3 class="modal-title" id="detailsModalLabel">Create Apartment</h3>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body px-md-5">
                    @await Html.PartialAsync("_Create", new ApartmentViewModel())
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="EditModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header px-md-5 ba">
                    <h3 class="modal-title" id="detailsModalLabel">Apartment Update</h3>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body px-md-5">
                    <partial name="~/Areas/User/Views/Apartment/_Edit.cshtml" />
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="DetailsModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header px-md-5 ba">
                    <h3 class="modal-title" id="detailsModalLabel">Apartment Details</h3>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body px-md-5">
                    <partial name="~/Areas/User/Views/Apartment/_Details.cshtml" />
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="ViewImagesModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header px-md-5 ba">
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body px-md-5">
                    <partial name="~/Areas/User/Views/Apartment/_ShowImage.cshtml" />
                </div>
            </div>
        </div>
    </div>
</div>
